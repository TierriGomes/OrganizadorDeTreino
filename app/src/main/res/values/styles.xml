<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyApp" parent="Theme.OrganizadorDeTreino">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="stylebutton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/shape_training</item>
        <item name="android:backgroundTintMode">src_in</item>
        <item name="android:textColor">@color/orange_star</item>
    </style>

    <style name="stylebutton2">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/shape_training</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/orange_star</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="exercicetext">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/orange_star</item>
        <item name="android:textColorHint">@color/weak_orange_star</item>
    </style>
</resources>